page {
	height: 100%;
	overflow: hidden;
}
.container {
	height: 100%;
	overflow: hidden;
}

.header {
	display: flex;
	background: #000;
	padding: 10rpx 40rpx 20rpx;
	color: #fff;
	-webkit-transition: all 0.6s ease-in-out;
}
.header.hidden {
	/*-webkit-transform: translate3d(0,-290rpx,0);*/
	margin-top: -190rpx;
}
.header .logo {
	width: 160rpx;
	height: 160rpx;
	border-radius: 10rpx;
	margin-right: 10px;
}
.header .info{
	flex: 1;
	min-width: 0;
}
.header .info .welcome {
	color:#fff;
	font-size:30rpx;
	width: 90%;
	line-height:60rpx;
}
.header .info .desc {
	color:#fff;
	font-size:30rpx;
	width: 90%;
	line-height:60rpx;
}

.content-container {
	display: -webkit-flex;
	height: 100%;
	box-sizing: border-box;
	padding-bottom: 100rpx;
}
.classify-container {
	width: 180rpx;
	background: #efefef;
	height: 100%;
}
.classify-container .classify {
	padding: 20rpx 30rpx;
	text-align: center;
}
.classify-container .classify.active {
	background: #fff;
}
.classify-container .classify .name {
	display: inline-block;
	font-size: 30rpx;
	color: #646464;
	line-height: 1.2;
	text-align: left;
	pointer-events: none;
}

.goods-container {
	-webkit-flex: 1;
	background: #ffffff;
	height: 100%;
	min-width: 0;
}
.goods-container .title {
	padding: 20rpx 25rpx;
	color: #646464;
	font-size: 30rpx;
	line-height: 30rpx;
	background: #f7f7f7;
}
.goods-container .goods {
	display: flex;
	position: relative;
	padding: 20rpx 30rpx;
	font-size: 36rpx;
	line-height: 40rpx;
	border-bottom: 1px solid #f7f7f7;
}
.goods-container .goods .good-pic {
	width: 140rpx;
	height: 140rpx;
	margin-right: 20rpx;
}
.goods-container .goods .good-info {
	flex: 1;
	min-width: 0;
}
.goods-container .goods .name {
	color: #000;
	font-size: 28rpx;
	line-height: 40rpx;
}
.goods-container .goods .desc {
	color: #989898;
	font-size: 24rpx;
	line-height: 30rpx;
	height: 30rpx;
	overflow: hidden;
}
.goods-container .goods .sold {
	color: #989898;
	font-size: 24rpx;
	line-height: 30rpx;
	height: 30rpx;
	overflow: hidden;
}
.goods-container .goods .price {
	color: #f45044;
	font-size: 36rpx;
	line-height: 40rpx;
}
.goods-container .goods .unit {
	padding-left: 6rpx;
	color: #c8c8c8;
	font-size: 26rpx;
	line-height: 40rpx;
}
.goods-container .goods .delCart {
	position: absolute;
	right: 160rpx;
	bottom: 20rpx;
	width: 52rpx;
	height: 52rpx;
	background: #ffffff;
	border-radius: 50%;
	border: 4rpx solid #aaa;
}
.goods-container .goods .delCart image {
	pointer-events: none;
	position: absolute;
	left: 12rpx;
	top: 12rpx;
	width: 28rpx;
	height: 28rpx;
}
.goods-container .goods .num {
	position:absolute;
	right:90rpx;
	bottom:20rpx;
	width:70rpx;
	height:60rpx;
	line-height:60rpx;
	text-align:center;
}
.goods-container .goods .addCart {
	position: absolute;
	right: 30rpx;
	bottom: 20rpx;
	width: 60rpx;
	height: 60rpx;
	background: #feb70f;
	border-radius: 50%;
}
.goods-container .goods .addCart image {
	pointer-events: none;
	position: absolute;
	left: 16rpx;
	top: 16rpx;
	width: 28rpx;
	height: 28rpx;
}

.cart-detail, .cart-detail .mask {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}
.cart-detail .mask {
	background: rgba(0,0,0,0.7);
}
.cart-detail .list {
	position: absolute;
	left: 0;
	bottom: 100rpx;
	width: 100%;
	background: #f7f7f7;
	padding: 30rpx 0;
}
.cart-detail .list .item {
	display: -webkit-flex;
	color: #333;
	font-size: 36rpx;
	line-height: 50rpx;
	padding: 20rpx 40rpx;
}
.cart-detail .list .item .name {
	-webkit-flex: 1;
}
.cart-detail .list .item .total {
	width: 120rpx;
}
.cart-detail .list .item .reduce,
.cart-detail .list .item .add {
	font-size: 50rpx;
	background: #feb70f;
	width: 50rpx;
	height: 50rpx;
	text-align: center;
	border-radius: 50%;
}
.cart-detail .list .item .num {
	width: 50rpx;
	text-align: center;
	margin: 0 5rpx;
}

.cart {
	display: -webkit-flex;
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background: #fff;
}
.cart .data {
	-webkit-flex: 1;
	/*border-top: 1rpx solid #e7e7e7;*/
}
.cart .data .icon {
	position: absolute;
	left: 40rpx;
	top: -20rpx;
	width: 100rpx;
	height: 100rpx;
	background: #feb70f;
	border-radius: 50%;
}
.cart .data .icon image {
	position: absolute;
	left: 15rpx;
	top: 15rpx;
	width: 70rpx;
	height: 70rpx;
}
.cart .data .icon .count {
	position: absolute;
	left: 70rpx;
	top: -10rpx;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 0 12rpx;
	color: #fff;
	background: #f45044;
	border-radius: 20rpx;
}
.cart .data .total {
	color: #f45044;
	font-size: 36rpx;
	line-height: 100rpx;
	padding-left: 160rpx;
}
.cart button {
	margin-top: 10rpx;
	margin-right: 20rpx;
	width: 200rpx;
	font-size: 32rpx;
}

/*特殊按钮*/
button.yellow {
	color: #fff;
	background: #feb70f;
}
button.yellow:after {
	border-color: rgba(255, 133, 111, 0.3);
}
button.yellow.active {
	background: #e4b203;
}
button.yellow.disabled {
	background: #f4e283;
}