.wx-mask{
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.c-item_info{
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 20rpx;
    overflow: hidden;
}
.c-item_info-image{
    width: 100%;
    padding-bottom: 80%;
    position: relative;
}
.c-item_info-image image{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    width: 100%;
    max-height:100%;
}
.c-item_info-content{
    padding: 20rpx;
    min-height: 40px;
    font-size: 16px;
    text-align: left;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #999999;
    min-width: 0;
}
.c-item_info-content .name{
    color: #000;
    font-size: 32rpx;
    line-height: 50rpx;
}
.c-item_info-content .desc{
    color: #989898;
    font-size: 26rpx;
    line-height: 36rpx;
    height: 36rpx;
    overflow: hidden;
}
.c-item_info-content .sold{
    color: #989898;
    font-size: 26rpx;
    line-height: 36rpx;
    height: 36rpx;
    overflow: hidden;
}
.c-item_info-footer{
    padding: 10rpx 20rpx;
    min-height: 60rpx;
    background-color: #fafafa;
    align-items: center;
    position: relative;
    text-align: left;
}
.c-item_info-footer .price {
    color: #f45044;
    font-size: 40rpx;
    line-height: 60rpx;
    text-align: left;
}
.c-item_info-footer .unit {
    padding-left: 6rpx;
    color: #c8c8c8;
    font-size: 28rpx;
    line-height: 60rpx;
}
.c-item_info-footer .delCart {
    position: absolute;
    right: 150rpx;
    bottom: 10rpx;
    width: 52rpx;
    height: 52rpx;
    background: #ffffff;
    border-radius: 50%;
    border: 4rpx solid #aaa;
}
.c-item_info-footer .delCart image {
    pointer-events: none;
    position: absolute;
    left: 12rpx;
    top: 12rpx;
    width: 28rpx;
    height: 28rpx;
}
.c-item_info-footer .num {
    position:absolute;
    right:80rpx;
    bottom:10rpx;
    width:70rpx;
    height:60rpx;
    line-height:60rpx;
    text-align:center;
}
.c-item_info-footer .addCart {
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
    width: 60rpx;
    height: 60rpx;
    background: #feb70f;
    border-radius: 50%;
}
.c-item_info-footer .addCart image {
    pointer-events: none;
    position: absolute;
    left: 16rpx;
    top: 16rpx;
    width: 28rpx;
    height: 28rpx;
}

.c-item_info-close{
    position: fixed;
    z-index: 5000;
    top: 85%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    width: 80rpx;
    height: 80rpx;
    padding: 20rpx;
    box-sizing: border-box;
    text-align: center;
    border-radius: 50%;
    border: 1rpx solid rgba(255, 255, 255, 0.2);
    overflow: hidden;
}
.c-item_info-close image{
    width: 100%;
    height: 100%;
    vertical-align: top;
}


.ellipsis {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}